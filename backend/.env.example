# Port your server will run on
PORT=5000

# MongoDB connection URI string (replace with your own)
MONGO_URI=your_mongo_connection_string_here

# JWT secret key for signing tokens (keep this secret)
JWT_SECRET=your_jwt_secret_key_here

# Email for sending OTP emails (e.g., Gmail)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# ImageKit keys and URL endpoint for file uploads
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key_here
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key_here
IMAGEKIT_URL_ENDPOINT=https://your_imagekit_url_endpoint_here

# Admin key for protected tutor registration and admin routes
ADMIN_KEY=your_admin_secret_key_here
